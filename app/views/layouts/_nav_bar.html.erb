<div id='nav_container'>
  <div id='nav_home' class='nav_item'>
    <a><%= link_to("Hemingwire", {:controller => 'home', :action => 'index'})%></a>
  </div>
  <div id='nav_search'>
    <%= form_tag :controller => 'users', :action => 'search' do %>
     <%= text_field_tag :search_people_content, nil, :autocomplete => 'off', :placeholder => 'Search People...' %>
    <% end %>
  </div>
  <% if @logged_in %>
    <div id='nav_logout' class='nav_item'>
      <a><%= link_to("Logout", {:controller => 'users', :action => 'logout'})%></a>
    </div>
    <div id='nav_own_page' class='nav_item'>
      <a><%= link_to(@curr_fullname, {:controller => 'users', :action => 'show', :id => @curr_user_id }) %> </a>
    </div>
    <div id='nav_post_book' class='nav_item'>
       <a><%= link_to("Post", {:controller => 'books', :action => 'index'})%></a>
    </div>
  <% else %>
    <div id='nav_signup' class='nav_item'>
      <a><%= link_to("Sign Up", {:controller => 'users', :action => 'new'})%></a>
    </div>
    <div id='nav_login' class='nav_item'> 
      <a><%= link_to("Login", {:controller => 'users', :action => 'login'})%></a>
    </div>
  <% end %>
</div>

