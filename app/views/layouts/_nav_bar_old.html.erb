<div id='nav_container'>
  <div id='nav_home' class='nav_item'>
    <%= link_to("Hemingwire", {:controller => 'home', :action => 'index'})%>
  </div>
  <% if @logged_in %>
    <div id='nav_logout' class='nav_item'>
      <%= link_to("Logout", {:controller => 'users', :action => 'logout'})%>
    </div>
    <div id='nav_own_page' class='nav_item'>
      <%= link_to(@curr_fullname, {:controller => 'users', :action => 'show', :id => @curr_user_id }) %> 
    </div>
    <div id='nav_post_book' class='nav_item'>
      <a id="post_book_link">Post</a>
    </div>
  <% else %>
    <div id='nav_signup' class='nav_item'>
      <%= link_to("Sign Up", {:controller => 'users', :action => 'new'})%>
    </div>
    <div id='nav_login' class='nav_item'> 
      <%= link_to("Login", {:controller => 'users', :action => 'login'})%>
    </div>
  <% end %>
  <div id='nav_search'>
    <%= form_tag :controller => 'users', :action => 'search' do %>
     <%= text_field_tag :search_people_content, nil, :autocomplete => 'off', :placeholder => 'Search People...' %>
    <% end %>
  </div>
</div>
<div id='top-buffer'>
   <!-- Has same height as nav bar but is 'in the flow' so It leaves space at the top of every page-->
</div>

<style>

.nav_item {
  float: left;
  padding: 8px 14px 7px 14px;
  border-style: solid;
  border-width: 0px 0px 0px 1px;
  border-color: #CCCCCC;
  background: #FFFFFF;
} 

.nav_item a {
  font-family: "Lucida Grande", "Lucida Sans Unicode", Ariel, sans-serif;
  font-size: 10pt;
  text-decoration: none;
  color: #000000;
}

#nav_home {
  border-right-width: 1px;
}

#nav_login {
  float: right;
}

#nav_search {
  overflow: hidden;

  padding-left: 7px;
  padding-top: 2px;

}

#search_people_content {
  width: 100%;

  border: none;
  height: 30px;
  font-family: "Lucida Grande", "Lucida Sans Unicode", Ariel, sans-serif;
  font-size: 10pt;
}

#search_people_content:focus {
  outline-width: 0;
}

#nav_logout {
  float: right;
}

#nav_own_page {
  float: right;
}

#nav_signup {
  float: right;
}

#nav_post_book {
  float: right;
}

/* post_book_link is not an href. The navigating is done with a jQuery click and jQuery ajax 
 * ==> this makes it look like a link 
 */

#post_book_link {
   cursor: pointer;
   cursor: hand;
}

#nav_container {
  position: fixed;

  top: 0;
  left: 0;
  right: 0;

  height: 34px;

  z-index: 9;

  /* IMPROVE */

  border-width: 0px 0px 1px 0px;
  border-style: solid;
  border-color: #CCCCCC;

  background: #FFFFFF;

  margin: 0px;
}

#top-buffer {
  height: 34px;
  margin-bottom: 30px;
}

</style>
